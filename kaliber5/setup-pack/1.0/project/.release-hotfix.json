{
  "plugins": {
    "release-it-lerna-changelog": {
      "infile": "CHANGELOG.md",
      "launchEditor": false
    },
    "@release-it/bumper": {
      "out": "composer.json"
    }
  },
  "git": {
    "tagName": "v${version}",
    "requireUpstream": false
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_AUTH"
  },
  "npm": {
    "publish": false
  }
}
